        <div class="container">
          <h1>Donations</h1>

          <ul class="breadcrumb">
            <li><a href="/donations/new">Add a Donation</a></li>
            <li><a href="/donations">Donations</a></li>
            <li class="active">This event</li>
          </ul>
        </div>
      </header>

      <section class="container">
        <h2><strong>New Donation</strong> </h2>

        <p class="lead">Add a New Donation</p>

           

        <div class="divider"><!-- divider -->
          <i class="fa fa-star"></i>
        </div>

<section class="container">

        <div class="row">
 

          <div class="col-md-9">


<form action="/donations" method="post">
<%= form_tag '/donations', method: :post do %>
  
  <div class="form-group">
  <%= label_tag :event_id %>
  <select class="form-control" name="event_id">
    <% Event.all.each do |event| %>
      <option value="<%= event.id %>"><%= event.name %></option>
    <% end %>
  </select>
  </div>
  
  <div class="form-group">
    <%= label_tag :description %> 
    <%= text_field_tag :description, "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :amount %> 
    <%= text_field_tag :amount, "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :quantity %> 
    <%= text_field_tag :quantity, "", class: "form-control" %>
  </div>
   

  <%= submit_tag "Add Donation", class: "btn btn-primary" %>

  <% end %>



    
