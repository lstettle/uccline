<h1>Update Event Info</h1>
<%= form_tag "/events/#{@event.id}", method: :patch do %>
 
  <div class="form-group">
    <%= label_tag :location %>
    <%= text_field_tag :location, @event.location, class: 'form-control' %>
  </div><div class="form-group">
    <%= label_tag :datetime %>
    <%= text_field_tag :datetime, @event.datetime, class: 'form-control' %>
  </div>
   <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @event.name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :price_adult %>
    <%= text_field_tag :price_adult, @event.price_adult, class: 'form-control' %>
  </div><div class="form-group">
    <%= label_tag :price_child %>
    <%= text_field_tag :price_child, @event.price_child, class: 'form-control' %>
  </div>
  <%= submit_tag "Update Event info", class: "btn btn-primary" %>
  <% end %>