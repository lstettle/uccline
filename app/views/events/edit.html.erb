
<!-- WRAPPER -->
    <div id="wrapper">

      <!-- PAGE TITLE -->
      <header id="page-title"> <!-- style="background-image:url('assets/images/demo/parallax_bg.jpg')" -->
        <!--
          Enable only if bright background image used
          <span class="overlay"></span>
        -->

        <div class="container">
          <h1>Events</h1>

          <ul class="breadcrumb">
            <li><a href="/events/:id/edit">Update</a></li>
            <li><a href="/events">Events</a></li>
            <li class="active">This event</li>
          </ul>
        </div>
      </header>

      <section class="container">
        <h2><strong>Edit an Event</strong> </h2>

        <p class="lead">This is the place to make any necessary updates to an existing event</p>

           

        <div class="divider"><!-- divider -->
          <i class="fa fa-star"></i>
        </div>

         
<%= form_tag "/events/#{@event.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @event.name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :location %>
    <%= text_field_tag :location, @event.location, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :start_date %>
    <%= text_field_tag :start_date, @event.start_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :end_date %>
    <%= text_field_tag :end_date, @event.end_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :start_time %>
    <%= text_field_tag :start_time, @event.start_time, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :end_time %>
    <%= text_field_tag :end_time, @event.end_time, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :price_adult %>
    <%= text_field_tag :price_adult, @event.price_adult, class: 'form-control' %>
  </div><div class="form-group">
    <%= label_tag :price_child %>
    <%= text_field_tag :price_child, @event.price_child, class: 'form-control' %>
  </div>
  <%= submit_tag "Update Event info", class: "btn btn-primary" %>
  <% end %>