        <div class="container">
          <h1>Events</h1>

          <ul class="breadcrumb">
            <li><a href="/events/new">Add Event</a></li>
            <li><a href="/events">Events</a></li>
            <li class="active">This event</li>
          </ul>
        </div>
      </header>

      <section class="container">
        <h2><strong>New Event</strong> </h2>

        <p class="lead">Add a New Event</p>

           

        <div class="divider"><!-- divider -->
          <i class="fa fa-star"></i>
        </div>

<section class="container">

        <div class="row">
 

          <div class="col-md-9">

<form action="/events" method="post">
<%= form_tag '/events', method: :post do %>
  <div class="form-group">
  <%= label_tag :name %>
  <%= text_field_tag :name, "", class: 'form-control' %>
  </div>
  <div class="form-group">
  <%= label_tag :category %>
  <select class="form-control" name="category_id">
    <% Category.all.each do |category| %>
      <option value="<%= category.id %>"><%= category.name %></option>
    <% end %>
  </select>
  </div>
  <div class="form-group">
  <%= label_tag :location %>
  <select class="form-control" name="location_id">
    <% Location.all.each do |location| %>
      <option value="<%= location.id %>"><%= location.name %></option>
    <% end %>
  </select>
  <div class="form-group">
  <%= label_tag :committee_ministry_id %>
  <select class="form-control" name="committee_ministry_id">
    <% CommitteeMinistry.all.each do |committee_ministry| %>
      <option value="<%= committee_ministry.id %>"><%= committee_ministry.name %></option>
    <% end %>
  </select>
  </div>
  <div class="form-group" name="datetime-local">
    <%= label_tag :start_time %> 
    <%= datetime_field_tag :start_time, "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :end_time %> 
    <%= datetime_field_tag :end_time, "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, "", class: "form-control" %>
  </div>

  <p>Are there tasks, donations, tickets with this event?</p>
   
  <%= submit_tag "Add event", class: "btn btn-primary" %>

  <% end %>



    
