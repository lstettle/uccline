  <div class="form-group">
    <%= label_tag :location %>
     <%= text_field_tag :location, "", class: 'form control' %>
  </div>
  <div class="form-group">
    <%= label_tag :datetime %> 
    <%= text_field_tag :datetime, "", class: "form=control" %>
  </div>
  <div class="form-group">
    <%= label_tag :price_adult %>
    <%= text_field_tag :price_adult, "", class: "form=control" %>
  </div>
  <div class="form-group">
    <%= label_tag :price_child %>
    <%= text_field_tag :price_child, "", class: "form=control" %>
  </div>
  <%= submit_tag "Add event", class: "btn btn-primary" %>
  <% end %>