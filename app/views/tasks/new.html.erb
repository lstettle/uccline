

<!-- WRAPPER -->
    <div id="wrapper">

      <!-- PAGE TITLE -->
      <header id="page-title"> <!-- style="background-image:url('assets/images/demo/parallax_bg.jpg')" -->
        <!--
          Enable only if bright background image used
          <span class="overlay"></span>
        -->

        <div class="container">
          <h1>Events</h1>

          <ul class="breadcrumb">
            <li><a href="/tasks/new">Add new task</a></li>
            <li><a href="/tasks">All open tasks</a></li>
            <li class="active">This event</li>
          </ul>
        </div>
      </header>

      <section class="container">
        <h2><strong>New Task</strong> </h2>

        <p class="lead">Add a New Task</p>

           

        <div class="divider"><!-- divider -->
          <i class="fa fa-star"></i>
        </div>

<section class="container">

        <div class="row">
 

          <div class="col-md-9">


<form action="/tasks" method="post">
<%= form_tag '/tasks', method: :post do %>
  
  <div class="form-group">
    <%= label_tag :description %> 
    <%= text_field_tag :description, "", class: "form-control" %>
  </div>

  <div class="form-group">
  <%= label_tag :event %>
  <select class="form-control" name="event_id">
    <% Event.all.each do |event| %>
      <option value="<%= event.id %>"><%= event.name %></option>
    <% end %>
  </select>
  </div>
  <div class="form-group">
  <%= label_tag :location %>
  <select class="form-control" name="location_id">
    <% Location.all.each do |location| %>
      <option value="<%= location.id %>"><%= location.name %></option>
    <% end %>
  </select>
  <div class="form-group">
    <%= label_tag :start_time %> 
    <%= text_field_tag :start_time, "", class: "form-control" %>
  </div><div class="form-group">
    <%= label_tag :end_time %> 
    <%= text_field_tag :end_time, "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :status %>
    <%= text_field_tag :status, "", class: "form-control" %>
  </div>
   
  <%= submit_tag "Add task", class: "btn btn-primary" %>

  <% end %>



    
