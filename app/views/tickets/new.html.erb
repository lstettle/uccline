    <div id="wrapper">

      <!-- PAGE TITLE -->
      <header id="page-title"> <!-- style="background-image:url('assets/images/demo/parallax_bg.jpg')" -->
        <!--
          Enable only if bright background image used
          <span class="overlay"></span>
        -->

        <div class="container">
          <h1>Tickets</h1>

          <ul class="breadcrumb">
            <li><a href="/tickets/new">Create new ticket</a></li>
            <li><a href="/tickets">Ticket</a></li>
            <li class="active">This event</li>
          </ul>
        </div>
      </header>

      <section class="container">
        <h2><strong>New Task</strong> </h2>

        <p class="lead">Add a New Task</p>

           

        <div class="divider"><!-- divider -->
          <i class="fa fa-star"></i>
        </div>

<section class="container">

        <div class="row">
 

          <div class="col-md-9">


<form action="/tickets" method="post">
<%= form_tag '/tickets', method: :post do %>
  
  <div class="form-group">
  <%= label_tag :event_id %>
  <select class="form-control" name="event_id">
    <% Event.all.each do |event| %>
      <option value="<%= event.id %>"><%= event.name %></option>
    <% end %>
  </select>
  </div>
  
  <div class="form-group">
    <%= label_tag :price_adult %> 
    <%= text_field_tag :price_adult, "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :price_child %> 
    <%= text_field_tag :price_child, "", class: "form-control" %>
  </div>
   

  <%= submit_tag "Create ticket", class: "btn btn-primary" %>

  <% end %>



    
