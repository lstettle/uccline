
 

    <!-- WRAPPER -->
    <div id="wrapper">

      <div id="shop">

        <!-- PAGE TITLE -->
        <header id="page-title">
          <div class="container">
            <h1>Sign UP</h1>

            <ul class="breadcrumb">
              <li><a href="/signup">Sign Up</a></li>
              <li class="active">Sign UP</li>
            </ul>
          </div>
        </header>


        <section class="container">

          <div class="row">

            <!-- REGISTER -->
            <div class="col-md-6">

              <h2>Create <strong>Account</strong></h2>

              <h1>Signup!</h1>
<%= form_tag '/users', method: :post do  %>
  <div>
    First Name: <input type="text" name="first_name">
  </div>
  <div>
    Last Name: <input type="text" name="last_name">
  </div>
  <div>
    Email: <input type="email" name="email">
  </div>
  <div>
    Password: <input type="password" name="password">
  </div>
  <div>
    Confirm Password: <input type="password" name="password_confirmation">
  </div>
  <input type="submit" value="Submit">
<% end %>


              <form class="white-row" method="post" action="/users">

                <!-- alert failed -->
                <div class="alert alert-danger">
                  <i class="fa fa-frown-o"></i> 
                  <strong>Password</strong> do not match!
                </div>

                <div class="row">
                  <div class="form-group">
                    <div class="col-md-12">
                      <label>E-mail Address</label>
                      <input type="text" value="email" class="form-control">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="form-group">
                    <div class="col-md-6">
                      <label>Password</label>
                      <input type="password" value="password" class="form-control">
                    </div>
                    <div class="col-md-6">
                      <label>Re-enter Password</label>
                      <input type="password" value="" class="form-control">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <input type="submit" value="Sign Up" class="btn btn-primary pull-right push-bottom" data-loading-text="Loading...">
                  </div>
                </div>

              </form>

            </div>
            <!-- /REGISTER -->

            <!-- WHY? -->
            <div class="col-md-6">

              <h2>Why register?</h2>

              <div class="white-row">

                <h4>Registration is fast, easy, and free.</h4>

                <p>Once you're registered, you can:</p>
                <ul class="list-icon check">
                  <li>You can easily sign up to volunteer.</li>
                  <li>You can keep track of all your tasks.</li>
                  <li>You can see contact information of other members.</li>
                  <li>You can see everything going on at church.</li>
                  <li>You can keep track of donations, ticket purchases, etc..</li>
                </ul>

                <hr class="half-margins" />

                <p>
                  Already have an account?
                  <a href="/login">Click to Sign In</a>
                </p>
              </div>

              <div class="white-row">
                <h4>Contact Customer Support</h4>
                <p>
                  If you're looking for more help or have a question to ask, please <a href="/contacts">contact us</a>.
                </p>
              </div>

            </div>
            <!-- /WHY? -->

          </div>

        </section>

      </div>
    </div>
    <!-- /WRAPPER -->

   </body>
</html>

   
      
    

   

   

    
    
